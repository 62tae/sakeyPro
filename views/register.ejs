<%- include('partials/header') %>
<div class="form-container">
	<h2>회원가입</h2>
	<% if(locals.error) { %>
	<div class="alert alert-danger"><%= error %></div>
	<% } %>
	<form method="post" accept-charset="utf-8">
		<div class="form-group">
			<label for="firstName">First name</label>
			<input id="firstName" type="text" name="firstName" value="<%= locals.firstName || ' ' %>" class="form-control" required />
		</div>
		<div class="form-group">
			<label for="lastName">Last name</label>
			<input id="lastName" type="text" name="lastName" value="<%= locals.lastName || ' ' %>" class="form-control" required />
		</div>
		<div class="form-group">
			<label for="username">Username</label>
			<input id="username" type="text" name="username" value="<%= locals.username || ' ' %>" class="form-control" required />
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input id="password" type="password" name="password" class="form-control" required />
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">회원가입</button>
			<a href="/login" class="btn btn-link">취소</a>
		</div>
	</form>
<%- include('partials/footer') %>